<%= form_for(@article,  role: "form") do |form| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger col-md-offset-1">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(@article.errors.count, "error") %>
          prohibited this article from being <saved></saved>
        </h2>
        <div class="pabel-body">
          <ul>
            <% @article.errors.full_messages.each do  |msg|  %>
              <li>
                <%= msg %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "label" %>
    <%= form.text_area :body, class: "form-control", rows: 10, placeholder: "Body of article" %>
  </div>

  <div class="form-group row">
    <p class="col-sm-10">
      <%= form.submit class: 'btn btn-primary' %>

    </p>
  </div>
<% end %>