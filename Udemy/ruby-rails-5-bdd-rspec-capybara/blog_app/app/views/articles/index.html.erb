<%= link_to "New Article", new_article_path, class:  "button is-primary"%>

<% if @articles.empty? %>
  <h1 id="no-articles">No Articles Created</h1>
<% else %>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    </thead>
    <tbody>
      <% @articles.each do |article|  %>
        <tr>
          <td><%= link_to article.title, article_path( article.id)  %></td>
          <td><%= truncate( article.body, length: 500 ) %> <small>Created by: <%= article.user.email %></small></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end  %>


